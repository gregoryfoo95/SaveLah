<%- include('../partials/header')%>
<%=msg%>


<div class="container-fluid">
    <div class="row">
        <%- include('../partials/sidebar') %>
        <main role="main" class="col-md-9 col-lg-10 px-4">
            <div class="row bg-dark text-white">
                <form action="/categories/<%= category._id%>?_method=PUT" method="POST">
                    <fieldset>
                        <legend>Edit Category & Budget</legend>
                        <label>Category:
                            <input name="category_name" placeholder="Case-insensitive" pattern="[A-Za-z0-9 ]+"
                                value="<%=category.category_name%>">
                        </label>
                        <br>
                        <label>Budget:
                            <input name="budget" type="number" placeholder="No negative budget please" step="0.01" min="0"
                                pattern="^\s*$^[+]?([0-9]+(?:[\.][0-9]*)?|\.[0-9]+)$" value="<%=category.budget%>">
                        </label>
                        <br>
                        <button class="editBtn" type="submit">Amend</button>
                    </fieldset>
                </form>
            </div>
        </main>
    </div>
</div>
<%- include('../partials/footer')%>